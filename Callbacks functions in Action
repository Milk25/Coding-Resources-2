// get a reference to the 'ul'


const ul = querySelector('.people');


const people = ['luigi', 'mario', 'ryu', 'shaun', 'chun-li'];


let html = ``;

people.forEach(function(person){
    html += `<li style="color: purple">${person}</li>`;
});

people.forEach(person => {
    html += `<li style="color: purple">${person}</li>`;
});


console.log(html);
ul.innerHTML = html;